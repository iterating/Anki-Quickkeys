[Unit]
Description=keyswap for Terminal and GUI
PartOf=graphical-session.target

[Service]
Type=simple
Restart=always
# eg DISPLAY=:0.0
#Environment=DISPLAY={displayid}
RestartSec=1
WorkingDirectory={homedir}/.config/ankinate
ExecStart=/bin/bash -c "{homedir}/.config/ankinate/xactive.sh carrots"
ExecStop=/bin/bash {homedir}/.config/ankinate/cleanup.sh

[Install]
WantedBy=default.target
